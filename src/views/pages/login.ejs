<!doctype html>
<html>

<head>
    <% include ../partials/header %>
        <title>Chaddon |
            <%= title %>
        </title>
        <link rel="stylesheet" type="text/css" href="css/login-index.css">
        <link rel="stylesheet" type="text/css" href="css/login.css">
</head>

<body>
    <header>
        <h3>
            <i class="fas fa-sign-in-alt"></i>
            <%= title %>
        </h3>
    </header>
    <main>

        <div class="container">
            <% if (message.length > 0) { %>
                <div class="alert alert-danger">
                    <%= message %>
                </div>
                <% } %>
                    <div class="row justify-content-center">
                        <div class="col-sm-12">
                            <form action="/login" method="post">
                                <% include ../partials/formInputFields %>
                                    <button type="submit" class="btn btn-success" id="loginBtn">Login</button>
                                    <a href="/">
                                        <button type="button" class="btn btn-outline-secondary" id="backToLoginBtn">Back</button>
                                    </a>
                            </form>
                        </div>
                    </div>
        </div>
    </main>
    <footer>
        <% include ../partials/footer %>
    </footer>
</body>

</html>